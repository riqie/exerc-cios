def menu():

    print("Qual operação deseja relizar")
    print("[1] MMC entre 2 números \n[2] MMC dos valores de uma lista com 3 ou mais elementos\n :")
    opcao = input('Escolha a opção: ')

    # valida a entrada do usuário.
    if opcao != '1' or opcao != '2':
        return True
    
