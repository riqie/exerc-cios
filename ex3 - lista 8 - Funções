def main():
    numero = int(input("Digite um número inteiro maior que 1: "))

    while True:
        if numero > 1:
            print(f"Fatores primos de {numero}: {fatoresPrimos(numero)}")
            break
        else:
            print("O número deve ser maior que 1.")
            numero = int(input("Digite novamente: "))
            continue

def fatoresPrimos(n):
    divisor = 2
    fatores = []
    
    while n > 1:
        while n % divisor == 0:
            fatores.append(divisor)
            n //= divisor
        divisor += 1
        
    return fatores

main()
