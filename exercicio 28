# Em uma loja de eletrodomésticos, os funcionários da seção de TVs recebem,
# mensalmente um salário fixo mais comissão. Essa comissão é calculada em relação
# ao tipo e número de televisores vendidos, de acordo com a tabela abaixo:

# Tipo Quantidade vendida Comissões
# 8 K 10 ou mais R$ 550 por TV vendida
# Menos que 10 R$ 350 por TV vendida
# ------------------------------------------
# 4 K 10 ou mais R$ 420 por TV vendida
# Menos que 10 R$ 250 por TV vendida

# Sabe-se ainda, que ele tem um desconto de 8% do salário total para pagamento do
# INSS e se o seu salário total for superior a R$ 950,00 ele ainda tem um desconto de
# 5% do salário para fins de imposto de renda. Faça um programa que leia os dados de
# vários funcionários e, para cada funcionário, calcule e imprima o salário líquido (já
# com os descontos).

# Além disso, no final, o programa deve:
# a. Imprimir o número de funcionários.
# b. Imprimir o total de salários pagos.
# c. Imprimir a média das comissões.
# d. Imprimir o valor da maior e da menor comissão paga pelo departamento.
        
def criarFuncionarios():
    funcionarios = []
    print('Digite "0" para sair.')

    while True:
        nome = input('Nome do funcionário: ')

        if nome == "0":
            return funcionarios  
        
        salario = input('Salário do funcionário: ')
        if not salario.isnumeric():
           print('Entrada inválida.')
           continue 
    
        tipo8k = input('Tvs 8k vendidas:')
        if not tipo8k.lower == '8k':
           print('Entrada inválida.')
           continue 

        tipo4k = input('Tvs 4k vendidas:')
        if not tipo4k.lower == '4k':
           print('Entrada inválida.')
           continue 

        info_funcionarios = {
            "Nome": nome,
            "Salário Fixo": salario,
            "Tvs 8k": tipo8k,
            "Tvs 4k": tipo4k
        }
     
        funcionarios.append(info_funcionarios)







































def calcular_salario_liquido(salario_fixo, tipo_tv, quantidade_tv):
    
    comissao_por_tv = 0
    
    if tipo_tv == '8K':

        if quantidade_tv >= 10:
            comissao_por_tv = 550

        else:
            comissao_por_tv = 350

    elif tipo_tv == '4K':

        if quantidade_tv >= 10:
            comissao_por_tv = 420

        else:
            comissao_por_tv = 250

    
    comissao_total = comissao_por_tv * quantidade_tv
    
    salario_bruto = salario_fixo + comissao_total
    
    desconto_inss = salario_bruto * 0.08
    
    desconto_ir = 0
    if salario_bruto > 950:
        desconto_ir = salario_bruto * 0.05
    
    salario_liquido = salario_bruto - desconto_inss - desconto_ir
    
    return salario_liquido, comissao_total

def ler_dados_funcionario():
    
    salario_fixo = float(input("Digite o salário fixo do funcionário (ou -1 para sair): "))
    if salario_fixo == -1:
        return None, None, None
    
    tipo_tv = input("Digite o tipo de TV vendida (8K ou 4K): ")
    quantidade_tv = int(input("Digite a quantidade de TVs vendidas: "))
    
    return salario_fixo, tipo_tv, quantidade_tv

def atualizar_estatisticas(salario_liquido, comissao_total, estatisticas):
    
    estatisticas['total_funcionarios'] += 1
    estatisticas['total_salarios'] += salario_liquido
    estatisticas['total_comissoes'] += comissao_total
    estatisticas['maior_comissao'] = max(estatisticas['maior_comissao'], comissao_total)
    estatisticas['menor_comissao'] = min(estatisticas['menor_comissao'], comissao_total)

def exibir_resultados_finais(estatisticas):
    
    if estatisticas['total_funcionarios'] > 0:
        media_comissoes = estatisticas['total_comissoes'] / estatisticas['total_funcionarios']
        print(f"\nNúmero de funcionários: {estatisticas['total_funcionarios']}")
        print(f"Total de salários pagos: R$ {estatisticas['total_salarios']:.2f}")
        print(f"Média das comissões: R$ {media_comissoes:.2f}")
        print(f"Maior comissão paga: R$ {estatisticas['maior_comissao']:.2f}")
        print(f"Menor comissão paga: R$ {estatisticas['menor_comissao']:.2f}")
    else:
        print("Nenhum funcionário foi processado.")

def main():
    
    estatisticas = {
        'total_funcionarios': 0,
        'total_salarios': 0,
        'total_comissoes': 0,
        'maior_comissao': 0,
        'menor_comissao': float('inf')
    }
    
    while True:
        
        salario_fixo, tipo_tv, quantidade_tv = ler_dados_funcionario()
        if salario_fixo is None:
            break
        
        
        salario_liquido, comissao_total = calcular_salario_liquido(salario_fixo, tipo_tv, quantidade_tv)
        
        
        atualizar_estatisticas(salario_liquido, comissao_total, estatisticas)
        
        print(f"Salário líquido do funcionário: R$ {salario_liquido:.2f}")
    
    exibir_resultados_finais(estatisticas)

main()
